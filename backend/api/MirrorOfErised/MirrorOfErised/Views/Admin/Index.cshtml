@model MirrorOfErised.ViewModels.UserViewModel

@{
    ViewBag.Title = "Admin";
    Layout = "_Layout";
}

<h2>Admin panel</h2>

<div class="row">
    <div class="col">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Completed sign-up</th>
                <th scope="col">Recognition allowed</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            @{int i = 1;}
            @foreach (var user in Model.Users)
            {
               <tr>
                    <th scope="row">@i</th>
                    <td>
                        @Html.DisplayFor(u => user.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(u => user.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(u => user.HasCompletedSignUp)
                    </td>
                    <td>
                        @Html.DisplayFor(u => user.IsActive)
                    </td>
                    <td>
                        <form asp-action="Disable" method="post">
                            <input type="hidden" asp-for="@Model.changedUser.Id" value="@user.Id">
                            <input type="submit" class="btn btn-link text-lowercase" value="@(@user.IsActive ? "Disable" : "Enable")">
                        </form>
                    </td>
                </tr>
                i++;
            }
            </tbody>
        </table>        
    </div>    
</div>
